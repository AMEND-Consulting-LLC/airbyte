{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "project.json",
  "properties": {
    "name": {
      "type": ["null", "string"]
    },
    "story_type": {
      "type": ["null", "string"]
    },
    "estimate": {
      "type": ["null", "integer"]
    },
    "story_priority": {
      "type": ["null", "string"]
    },
    "current_state": {
      "type": ["null", "string"]
    },
    "requested_by_id": {
      "type": ["null", "integer"]
    },
    "owned_by_id": {
      "type": ["null", "integer"]
    },
    "url": {
      "type": ["null", "string"]
    },
    "owner_ids": {
      "type": "array",
      "items": {
        "type": "integer"
      }           
    },
    "labels": {
      "type": "array",
      "items": {
        "$ref": "label.json"
      }
    },
    "accepted_at": {
      "type": ["null", "string"],
      "format": "date-time"
    }
  }
}
