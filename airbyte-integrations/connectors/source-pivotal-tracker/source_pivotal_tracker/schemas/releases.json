{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [{ "$ref": "project.json" }],
  "properties": {
    "name": {
      "type": ["null", "string"]
    },
    "current_state": {
      "type": ["null", "string"]
    },
    "url": {
      "type": ["null", "string"]
    },
    "deadline": {
      "type": ["null", "string"],
      "format": "date-time"
    },
    "labels": {
      "type": "array",
      "items": {
        "$ref": "label.json"
      }
    },
    "accepted_at": {
      "type": ["null", "string"],
      "format": "date-time"
    }
  }
}